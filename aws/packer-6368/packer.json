{
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{ user `aws_access_key` }}",
      "secret_key": "{{ user `aws_secret_key` }}",
      "communicator": "winrm",
      "winrm_username": "Administrator",
      "winrm_port": 5985,
      "windows_password_timeout": "30m",
      "region": "{{ user `region` }}",
      "user_data_file": "userdata.txt",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "*Windows_Server-2012-R2*English-64Bit-Base*",
          "root-device-type": "ebs"
        },
        "most_recent": true,
        "owners": "amazon"
      },
      "instance_type": "{{ user `AMI_build_instance_type`}}",
      "ami_name": "Packer WinRM reboot issue {{isotime | clean_ami_name}}"
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "inline": ["shutdown /r /t 0"]
    },
    {
      "type": "powershell",
      "inline": ["write-output \"Finish\""]
    }
  ],
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
    "aws_secret_key": "{{env `AWS_SECRET_KEY`}}",
    "region": "eu-west-2",
    "AMI_build_instance_type": "t2.micro"
  }
}
