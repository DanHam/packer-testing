{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "region":         "eu-west-2"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{ user `aws_access_key` }}",
      "secret_key": "{{ user `aws_secret_key` }}",
      "region": "{{ user `region` }}",
      "instance_type": "t2.micro",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "*Windows_Server-2016-English-Full-Base*",
          "root-device-type": "ebs"
        },
        "most_recent": true,
        "owners": "amazon"
      },
      "ami_name": "win2016-packer-demo-{{timestamp}}",
      "user_data_file": "./bootstrap_cygwin_ssh_win.txt",
      "communicator": "ssh",
      "ssh_username": "Administrator",
      "ssh_private_key_file": "./insecure.id_rsa",
      "ssh_timeout": "15m"
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "remote_path": "c:/windows/temp/ps-script.ps1",
      "remote_env_var_path": "c:/windows/temp/ps-env-vars.ps1",
      "execute_command": "powershell -executionpolicy bypass \"& { if (Test-Path variable:global:ProgressPreference){\\$ProgressPreference='SilentlyContinue'};. {{.Vars}}; &'{{.Path}}'; exit \\$LastExitCode }\"",
      "inline": [
        "Write-Host \"Hello. This is a std powershell without any user\"",
        "Write-Host \"environment variables defined.\""
      ]
    },
    {
      "type": "powershell",
      "remote_path": "c:/windows/temp/ps-script.ps1",
      "remote_env_var_path": "c:/windows/temp/ps-env-vars.ps1",
      "execute_command": "powershell -executionpolicy bypass \"& { if (Test-Path variable:global:ProgressPreference){\\$ProgressPreference='SilentlyContinue'};. {{.Vars}}; &'{{.Path}}'; exit \\$LastExitCode }\"",
      "environment_vars": [
        "VAR1=A$Dollar",
        "VAR2=A`Backtick",
        "VAR3=A'SingleQuote",
        "VAR4=A\"DoubleQuote"
      ],
      "script": "./StandardScriptTest.ps1"
    },
    { "type": "powershell",
      "remote_path": "c:/windows/temp/ps-script.ps1",
      "remote_env_var_path": "c:/windows/temp/ps-env-vars.ps1",
      "execute_command": "powershell -executionpolicy bypass \"& { if (Test-Path variable:global:ProgressPreference){\\$ProgressPreference='SilentlyContinue'};. {{.Vars}}; &'{{.Path}}'; exit \\$LastExitCode }\"",
      "elevated_user": "Administrator",
      "elevated_password": "SuperS3cr3t!",
      "environment_vars": [
        "MOO=BAZ"
      ],
      "scripts": [
        "./ElevatedScriptTest.ps1"
      ]
    }
  ]
}
