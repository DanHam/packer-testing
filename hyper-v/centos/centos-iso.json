{
  "variables": {
    "template": "centos-7-x86_64",

    "iso_url": "file:///C:/Users/Administrator/Documents/iso/os/centos/centos7x86_64/CentOS-7-x86_64-DVD-1804.iso",
    "iso_checksum": "506e4e06abf778c3435b4e5745df13e79ebfc86565d7ea1e128067ef6b5a6345",
    "iso_checksum_type": "sha256",

    "debug": "false",

    "admin_create": "true",
    "admin_user": "coadmin",
    "admin_group": "coadmin",
    "admin_uid": "1000",
    "admin_gid": "1000",
    "admin_groups": "wheel",
    "admin_shell": "/bin/bash",
    "admin_gecos": "CentOS Administrator",
    "admin_ssh_authorised_key": "ssh-rsa  InsecureKey",

    "hvmac_script_upload_path": "/tmp/hyperv-correct-mac-addr.sh",
    "zero_script_upload_path": "/tmp/zero-free-space.sh"

  },

  "builders": [
    {
      "type": "hyperv-iso",
      "communicator": "ssh",
      "http_directory": "http",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "boot_command": [
        "<tab> <wait>",
        "text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg <wait>",
        "<enter> <wait>"
      ],
      "boot_wait": "20s",

      "vm_name": "{{user `template`}}",
      "cpu": "1",
      "ram_size": "1024",
      "disk_size": "10240",
      "switch_name": "ExternalSwitch",

      "ssh_username": "root",
      "ssh_private_key_file": "insecure.id_rsa",
      "ssh_timeout": "1h",

      "shutdown_command": "/sbin/poweroff"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "execute_command": "{{ .Vars }} $(command -v bash) '{{.Path }}'",
      "environment_vars": [
        "DEBUG={{user `debug`}}",
        "ADMIN_CREATE={{user `admin_create`}}",
        "ADMIN_USER={{user `admin_user`}}",
        "ADMIN_GROUP={{user `admin_group`}}",
        "ADMIN_UID={{user `admin_uid`}}",
        "ADMIN_GID={{user `admin_gid`}}",
        "ADMIN_GROUPS={{user `admin_groups`}}",
        "ADMIN_SHELL={{user `admin_shell`}}",
        "ADMIN_GECOS={{user `admin_gecos`}}",
        "ADMIN_SSH_AUTHORISED_KEY={{user `admin_ssh_authorised_key`}}"
      ],
      "scripts": [
        "scripts/10-create-admin-user.sh",
        "scripts/11-configure-sudoers.sh"
      ]
    },
    {
      "type": "file",
      "source": "scripts/hyperv-correct-mac-addr.sh",
      "destination": "{{user `hvmac_script_upload_path`}}"
    },
    {
      "type": "shell",
      "environment_vars": [
        "HVMAC_SCRIPT_UPLOAD_PATH={{user `hvmac_script_upload_path`}}"
      ],
      "execute_command": "sudo {{ .Vars }} $(command -v bash) '{{.Path }}'",
      "scripts": [
        "scripts/80-create-hyperv-correct-mac-unit-file.sh"
      ]
    },
    {
      "type": "file",
      "source": "scripts/zero-free-space.sh",
      "destination": "{{user `zero_script_upload_path`}}"
    },
    {
      "type": "shell",
      "environment_vars": [
        "ZERO_SCRIPT_UPLOAD_PATH={{user `zero_script_upload_path`}}"
      ],
      "execute_command": "sudo {{ .Vars }} $(command -v bash) '{{.Path }}'",
      "scripts": [
        "scripts/90-create-zero-free-space-unit-file.sh"
      ]
    }
  ]
}
